<script>
    // Cabe√ßalho
    function changeHeaderColor() {
        const header = document.getElementById('header');
        header.style.background = header.style.background.includes('linear-gradient') ? 'green' : 'linear-gradient(90deg,#388e3c,#81c784)';
    }

    // Pesquisa
    function searchProduct() {
        const query = document.getElementById('searchInput').value;
        if(query) alert('Voc√™ pesquisou por: ' + query);
    }

    // Carrossel
    let currentIndex = 0;
    const images = document.querySelectorAll('.carousel-images img');
    const totalImages = images.length;

    function showSlide(index) {
        document.getElementById('carouselImages').style.transform = `translateX(-${index * 100}%)`;
    }

    function nextSlide() { currentIndex = (currentIndex + 1) % totalImages; showSlide(currentIndex); }
    function prevSlide() { currentIndex = (currentIndex -1 + totalImages) % totalImages; showSlide(currentIndex); }
    setInterval(nextSlide, 4000);

    // Carrinho
    const cartItems = [];
    function addToCart(item) {
        cartItems.push(item);
        const ul = document.getElementById('cartItems');
        ul.innerHTML = cartItems.map(i => `<li>${i}</li>`).join('');
        alert(`${item} adicionado ao carrinho!`);
    }

    // Formul√°rio
    function sendMessage() {
        const name = document.getElementById('name').value;
        const email = document.getElementById('email').value;
        const message = document.getElementById('message').value;

        if(name && email && message) {
            alert(`Mensagem enviada!\nNome: ${name}\nEmail: ${email}\nMensagem: ${message}`);
            document.getElementById('name').value = '';
            document.getElementById('email').value = '';
            document.getElementById('message').value = '';
        } else { alert('Preencha todos os campos.'); }
    }
</script>

